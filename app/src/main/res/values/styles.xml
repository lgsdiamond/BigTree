<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Data Display TextView-->
    <style name="DataTitle" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:background">@color/colorDataTitleBackground</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorDataTitle</item>
    </style>

    <style name="DataSubTitle" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:background">@color/colorDataSubTitleBackground</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorDataTitle</item>
    </style>

    <style name="DataLabel" parent="TextAppearance.AppCompat.Inverse">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorDataLabel</item>
    </style>

    <style name="DataValue" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorDataValue</item>
    </style>

    <style name="edit_box" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_line_edit</item>
        <item name="android:ems">10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textCursorDrawable">@drawable/edit_box_cursor</item>
        <item name="android:paddingLeft">@dimen/edit_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">@dimen/edit_margin</item>
    </style>

</resources>
